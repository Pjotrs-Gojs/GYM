<mvc:View	controllerName="com.GYM.GYM.controller.Master"
			xmlns:mvc="sap.ui.core.mvc" 
			displayBlock="true"
			xmlns="sap.m" 
			xmlns:core="sap.ui.core">
	<App id="app">
		<pages>
			<Page id="page" showHeader="false">
				<content>
					<Toolbar>
						<Title text="Trainers"/>
						<ToolbarSpacer/>
						<ComboBox
							showSecondaryValues= "true"
							items="{
								path: '/ZGym',
								sorter: { path: 'NAME' }
							}">
							<core:ListItem key="{NAME}" text="{NAME}" additionalText = "{STREET},{STREETNUM}"/>
						</ComboBox>
					</Toolbar>
					<List id="list" width="auto" class="sapFDynamicPageAlignContent"
						items="{ path: '/ZTrainer', 
						sorter:{ path: 'ZNAME', descending: false }, groupHeaderFactory: '.createGroupHeader' }"
						growing="true" 
						growingScrollToLoad="true"
						updateFinished=".onUpdateFinished" 
						selectionChange=".onSelectionChange"
						>
						<items>
							<ObjectListItem id="ObjectListItem" type="Navigation" press=".onSelectionChange" title="{ZNAME} {ZSURNAME}" number="{ path: 'ZDATE', formatter: '.formatter.Datuma' } years." >
								<firstStatus>
									<ObjectStatus title="Working From" text="{ path: 'TIMEFROM', formatter: '.formatter.Time' }" state="Success" />
								</firstStatus>
								<secondStatus>
									<ObjectStatus title="Working Till" text="{ path: 'TIMETO', formatter: '.formatter.Time' }" state="Error"/>
								</secondStatus>
							</ObjectListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>