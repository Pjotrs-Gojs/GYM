<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" 
xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>EditWorkoutDialogLable}" id="editAction" contentWidth="15%" afterClose="editDialogAfterclose">
		<VBox class="sapUiSmallMargin">
		    <f:SimpleForm
		         id="SimpleFormDisplay354"
		         editable="true"
		         layout="ResponsiveGridLayout"
		         title="{i18n>EditWorkoutDialogLable}"
		         labelSpanXL="3"
		     labelSpanL="3"
		         labelSpanM="3"
		         labelSpanS="12"
		         adjustLabelSpan="false"
		         emptySpanXL="4"
		         emptySpanL="4"
		         emptySpanM="4"
		         emptySpanS="0"
		     columnsXL="1"
		         columnsL="1"
		         columnsM="1"
		         singleContainerFullSize="false">
		    <f:content>
			<Label text="{i18n>ComboBoxLable}" required="true"/>
				<ComboBox
					id="selectTrainingTypeID"
					showSecondaryValues= "true"
					placeholder = "{i18n>ComboBoxPlaceHolder}"
					change = "dropDownSelect"
					items="{ZTrainerRef}">
					<core:ListItem key="{TRAININGTYPEID}" text="{NAME}" additionalText = "{i18n>ComboBoxAdditionalText} {path: 'DURATION', formatter: '.formatter.Time'}"/>
				</ComboBox>
				<Label text="{i18n>TrainingTimeLable}" required="true"/>
				<Input id="inputTrainingTime" value="{path: 'TRAININGTIME', formatter: '.formatter.Time'}" type="Time"/>
				<Label text="{i18n>TrainingDateLable}" required="true"/>
				<Input id="inputTrainingDate" value="{TRAININGDATE}" type="Date"/>
				<Label text="{i18n>EditWorkoutName}" required="true"/>
				<Input id="inputTraineeName" value="{TRAINEENAME}" type="Text"/>
				<Label text="{i18n>EditWorkoutSurname}" required="true"/>
				<Input id="inputTraineeSurname" value="{TRAINEESURNAME}" type="Text"/>
			</f:content>
    	</f:SimpleForm>
    </VBox>
		<beginButton>
			<Button text="{i18n>ButtonUpdate}" press="updateDialog"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>ButtonCancel}" press="closeDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>