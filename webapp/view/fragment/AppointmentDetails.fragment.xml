<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<ResponsivePopover
			id="AppointmentDetails"
			title="{title}"
			class="sapUiPopupWithPadding"
			placement="Auto">
		<f:SimpleForm
				id="appointmentForms"
				title="Calendar Appointment"
				editable="false"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
			<Label
					text="{i18n>SimpleFormLable}"/>
			<Label text="{i18n>AppLableTrainerID}"/>
			<Text	text="{TRAININGID}"/>
			<Label text="{i18n>AppLableTimeFrom}"/>
			<Text	text="{path: 'TRAININGTIME', formatter: '.formatter.Time'}"/>
			<Label text="{i18n>AppLableTimeTo}"/>
			<Text text="{path: 'ENDTIME', formatter: '.formatter.Time'}"/>
			<Label text="{i18n>AppLableName}" />
			<Text text="{TRAINEENAME}"/>
			<Label text="{i18n>AppLableSurname}"/>
			<Text text="{TRAINEESURNAME}"/>
			<Label text="{i18n>AppLableTrainingType}"/>
			<Text text="{NAME}"/>
		</f:SimpleForm>
	</ResponsivePopover>
</core:FragmentDefinition>