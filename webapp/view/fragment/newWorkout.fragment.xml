<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" 
xmlns:f="sap.ui.layout.form">
	<Dialog title="Enter New Workout" id="addAction" contentWidth="15%" afterClose="dialogAfterclose">
		<VBox class="sapUiSmallMargin">
		    <f:SimpleForm
		         id="SimpleFormDisplay354"
		         editable="true"
		         layout="ResponsiveGridLayout"
		         title="New Workout"
		         labelSpanXL="3"
		     labelSpanL="3"
		         labelSpanM="3"
		         labelSpanS="12"
		         adjustLabelSpan="false"
		         emptySpanXL="4"
		         emptySpanL="4"
		         emptySpanM="4"
		         emptySpanS="0"
		     columnsXL="1"
		         columnsL="1"
		         columnsM="1"
		         singleContainerFullSize="false">
		    <f:content>
			<Label text="Training Type" required="true"/>
				<ComboBox
					id="selectTrainingTypeID"
					showSecondaryValues= "true"
					change = "dropDownSelect"
					items="{
						path: '/ZTrainingType',
						sorter: { path: 'NAME' }
					}">
					<core:ListItem key="{TRAININGTYPEID}" text="{NAME}" additionalText = "Duration: {path: 'DURATION', formatter: '.formatter.Time'}"/>
				</ComboBox>
				<Label labelFor="inputTrainingTime" text="Training Time" required="true"/>
				<Input id="inputTrainingTime" placeholder="Choose Training Time" type="Time"/>
				<Label labelFor="inputTrainingDate" text="Training Date" required="true"/>
				<Input id="inputTrainingDate" placeholder="Choose Training Date" type="Date"/>
				<Label labelFor="inputTraineeName" text="Your Name" required="true"/>
				<Input id="inputTraineeName" placeholder="Enter Your Name" type="Text"/>
				<Label labelFor="inputTraineeSurname" text="Your Surname" required="true"/>
				<Input id="inputTraineeSurname" placeholder="Enter Your Surname" type="Text"/>
			</f:content>
    	</f:SimpleForm>
    </VBox>
		<beginButton>
			<Button text="Confirm" press="onConfirmDialog"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>